        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_thin_line"
        android:layout_alignLeft="@+id/usenewspeed"
        android:layout_marginTop="10dip"
        android:textSize="25sp"
        android:text="OVERRIDE"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/second_line"
        android:layout_below="@+id/speedGroup"
    	android:layout_width="fill_parent"
    	android:layout_height="2dip"
    	android:layout_marginTop="10dip"
    	android:background="#000000"
    	android:orientation="horizontal"
    	android:layout_alignRight="@+id/whatever_line"
    	 >
	</LinearLayout>
    
    <RadioGroup
        android:id="@+id/speedGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/speedLabel"
        android:layout_marginLeft="0dip"
        android:layout_marginTop="10dip"
