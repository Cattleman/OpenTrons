    	android:layout_alignTop="@+id/reset"
    	android:layout_alignBottom="@+id/first_line"
    	android:background="#000000"
    	android:orientation="horizontal" >
	</LinearLayout>
	
    <LinearLayout
        android:id="@+id/eighth_line"
        android:layout_toRightOf="@+id/toggle_power"
    	android:layout_height="800dip"
    	android:layout_width="2dip"
    	android:layout_marginLeft="20dip"
    	android:layout_alignTop="@+id/reset"
    	android:layout_alignBottom="@+id/first_line"
    	android:background="#000000"
    	android:orientation="horizontal" >
	</LinearLayout>
    
    
    <Button
        android:id="@+id/home_sequence"
