        android:layout_below="@+id/fifth_line"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:background="@drawable/green_button"
        android:text="@string/go_label"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/yneg"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginTop="5dip"
        android:layout_below="@+id/xneg"
        android:layout_alignLeft="@+id/xneg"
        android:background="@drawable/green_button"
        android:text="@string/yneg"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/second_thin_line"
        android:layout_toRightOf="@+id/speedLabelA"
    	android:layout_height="50dip"
    	android:layout_width="2dip"
    	android:layout_marginLeft="20dip"
    	android:layout_alignTop="@+id/first_thin_line"
    	android:layout_alignBottom="@+id/second_line"
    	android:background="#000000"
    	android:orientation="horizontal" >
	</LinearLayout>
    
    <ToggleButton
        android:id="@+id/usenewspeed"
        android:padding="0dip"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginLeft="30dip"
        android:layout_alignTop="@+id/jogRate"
        android:layout_toRightOf="@+id/second_thin_line"
        android:background="@drawable/blue_button"
        android:textOff="Speed O/R"
        android:textOn="Speed O/R"
        android:textColor="@color/toggle_color"
        android:textStyle="bold" />
    
    
    <ToggleButton
        android:id="@+id/factorD10"
        android:padding="0dip"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginLeft="20dip"
        android:layout_alignTop="@+id/jogRate"
        android:layout_toRightOf="@+id/usenewspeed"
        android:background="@drawable/blue_button"
        android:textOff="/ 10"
        android:textOn="/ 10"
        android:textColor="@color/toggle_color"
        android:textStyle="bold" />
    
    <ToggleButton
        android:id="@+id/factorD100"
        android:padding="0dip"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/jogRate"
        android:layout_toRightOf="@+id/factorD10"
