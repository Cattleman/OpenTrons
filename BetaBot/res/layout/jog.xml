        android:text="@string/zero_label"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/xpos"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="75dip"
        android:layout_alignTop="@+id/xneg"
        android:layout_toRightOf="@+id/xneg"
        android:background="@drawable/green_button"
        android:text="@string/xpos"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/third_line"
        android:layout_toRightOf="@+id/xpos"
    	android:layout_height="500dip"
    	android:layout_width="2dip"
    	android:layout_marginLeft="30dip"
    	android:background="#000000"
    	android:orientation="vertical"
    	android:layout_alignTop="@+id/first_line"
    	android:layout_alignBottom="@+id/fourth_line"
    	 >
	</LinearLayout>

    <Button
        android:id="@+id/yzero"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/yneg"
        android:layout_toRightOf="@+id/yneg"
        android:background="@drawable/green_button"
        android:text="@string/zero_label"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ypos"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="75dip"
        android:layout_alignTop="@+id/yneg"
        android:layout_toRightOf="@+id/yneg"
        android:background="@drawable/green_button"
        android:text="@string/ypos"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zneg"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginTop="5dip"
        android:layout_alignLeft="@+id/yneg"
        android:layout_below="@+id/yneg"
        android:background="@drawable/green_button"
        android:text="@string/zneg"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zzero"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/zneg"
        android:layout_toRightOf="@+id/zneg"
        android:background="@drawable/green_button"
        android:text="@string/zero_label"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/zpos"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="75dip"
        android:layout_alignTop="@+id/zneg"
        android:layout_toRightOf="@+id/zneg"
        android:background="@drawable/green_button"
        android:text="@string/zpos"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/aneg"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginTop="5dip"
        android:layout_alignLeft="@+id/yneg"
        android:layout_below="@+id/zneg"
        android:background="@drawable/green_button"
        android:text="@string/aneg"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/fourth_line"
        android:layout_below="@+id/aneg"
    	android:layout_width="fill_parent"
    	android:layout_height="2dip"
    	android:layout_marginTop="10dip"
    	android:background="#000000"
    	android:orientation="horizontal"
    	android:layout_alignRight="@+id/whatever_line"
    	 >
	</LinearLayout>
	
    <Button
        android:id="@+id/sensor"
        android:padding="0dip"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@+id/yneg"
        android:layout_below="@+id/second_line"
        android:background="@drawable/blue_button"
        android:text="Sensor"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    
    <LinearLayout
        android:id="@+id/fifth_line"
        android:layout_below="@+id/toggle_status"
    	android:layout_width="fill_parent"
    	android:layout_height="2dip"
    	android:layout_marginTop="50dip"
    	android:background="#000000"
    	android:orientation="horizontal"
    	android:layout_alignRight="@+id/whatever_line"
    	 >
	</LinearLayout>
    
    <TextView
        android:id="@+id/reading"
        android:layout_width="150dip"
        android:layout_height="30dip"
        android:layout_alignBottom="@+id/sensor"
        android:layout_alignTop="@+id/sensor"
        android:layout_marginLeft="15dip"
        android:layout_toRightOf="@+id/sensor"
        android:background="@color/white"
        android:gravity="bottom"
        android:text=" ------ "
        android:textSize="30sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/coeffLabel"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_alignLeft="@+id/reading"
        android:layout_below="@+id/reading"
        android:gravity="bottom"
        android:text="coef."
        android:padding="0dip"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@color/light_green" />
    
    <TextView
        android:id="@+id/constLabel"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coeffLabel"
        android:layout_toRightOf="@+id/coeffLabel"
        android:layout_marginLeft="10dip"
        android:layout_below="@+id/reading"
        android:background="@color/light_green"
        android:gravity="bottom"
        android:text="const."
        android:padding="0dip"
        android:textSize="25sp"
        android:textStyle="bold" />
    
    <ToggleButton
        android:id="@+id/adjFactorToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/coeffLabel"
        android:layout_alignTop="@+id/adjCoef"
        android:layout_alignBottom="@+id/adjCoef"
        android:layout_marginRight="10dip"
        android:textSize="25sp"
        android:textOff="Adj."
        android:textOn="Adj."
        android:textColor="@color/toggle_color"
        android:background="@drawable/purple_button"
        android:textStyle="bold"
        android:gravity="center_vertical" />
    
    <EditText
        android:id="@+id/adjCoef"
        android:layout_width="70dip"
        android:layout_height="50dip"
        android:layout_below="@+id/coeffLabel"
        android:layout_alignLeft="@+id/coeffLabel"
        android:layout_alignRight="@+id/coeffLabel"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="25sp"
        android:gravity="center"
        android:background="@color/white"
        android:numeric="signed"
        android:hint="coef."
         />
    
    <EditText
        android:id="@+id/adjConst"
        android:layout_width="70dip"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/adjCoef"
        android:layout_alignTop="@+id/adjCoef"
        android:layout_alignBottom="@+id/adjCoef"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginLeft="10dip"
        android:background="@color/white"
        android:numeric="signed"
        android:hint="const." />
    
    <TextView
        android:id="@+id/adjReading"
        android:layout_width="300dip"
        android:layout_height="55dip"
        android:layout_alignRight="@+id/adjConst"
        android:layout_alignLeft="@+id/adjCoef"
        android:layout_below="@+id/adjFactorToggle"
        android:background="@color/white"
        android:gravity="bottom"
        android:text=" ------ "
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dip" />
    
     <LinearLayout
        android:id="@+id/sixth_line"
    	android:layout_height="6000dip"
    	android:layout_width="2dip"
    	android:layout_alignTop="@+id/second_line"
    	android:layout_alignBottom="@+id/fifth_line"
    	android:layout_alignRight="@+id/third_line" 
    	android:layout_alignLeft="@+id/third_line"
    	android:background="#000000"
    	android:orientation="horizontal" >
	</LinearLayout>
	
    <ToggleButton
        android:id="@+id/toggle_power"
        android:padding="0dip"
        android:layout_width="55dip"
        android:layout_height="55dip"
        android:layout_alignBottom="@+id/reset"
        android:layout_toRightOf="@+id/seventh_line"
        android:background="@drawable/purple_button"
        android:textColor="#ffffff"
        android:textOff="Disable Motors"
        android:textOn="Energize Motors"
        android:textStyle="bold"
        android:layout_marginLeft="20dip"
        />

    <Button
        android:id="@+id/azero"
        android:padding="0dip"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="5dip"
        android:layout_alignTop="@+id/aneg"
        android:layout_toRightOf="@+id/aneg"
        android:background="@drawable/green_button"
        android:text="@string/zero_label"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/apos"
        android:layout_width="65dip"
        android:layout_height="65dip"
        android:layout_marginLeft="75dip"
        android:layout_alignTop="@+id/aneg"
        android:layout_toRightOf="@+id/aneg"
        android:background="@drawable/green_button"
        android:text="@string/apos"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
