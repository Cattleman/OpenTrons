<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
    <TextView
	    android:id="@+id/insert_row_label"
	    android:layout_width="fill_parent"
	    android:layout_height="30dip" 
	   	android:text=" INSERT BEFORE ROW:"
	   	android:gravity="center_vertical"
   	/>
    
    <com.nwags.BetaBot.MyEditText
        android:id="@+id/insert_row"
        android:tag="insert_row"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:gravity="center_horizontal|bottom"
    	android:background="@drawable/cell_shape"
    	android:layout_gravity="bottom"
    	android:inputType="number"
    	
    />
    <TextView
	    android:id="@+id/insert_count_label"
	    android:layout_width="fill_parent"
	    android:layout_height="30dip" 
	   	android:text=" NUMBER OF ROWS:"
	   	android:gravity="center_vertical"
	   	
   	/>
    <com.nwags.BetaBot.MyEditText
        android:id="@+id/insert_count"
        android:tag="insert_count"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:gravity="center_horizontal|bottom"
    	android:background="@drawable/cell_shape"
    	android:layout_gravity="bottom"
    	android:inputType="number"
    	
    />

</LinearLayout>